<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/fondos"
    android:padding="40dp"
    tools:context=".NuevoProductoActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"/>

        <EditText
            android:id="@+id/editTextNombreNPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:textStyle="bold"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPrecioNPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Precio"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextDetalleNPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Detalle"
            android:inputType="textMultiLine" />

        <ImageView
            android:id="@+id/imagenSelectNPA"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"/>

        <Button
            android:id="@+id/buttonNPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/Btn_save" />

</LinearLayout>