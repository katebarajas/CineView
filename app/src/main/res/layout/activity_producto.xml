<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewNombreAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"/>
    <TextView
        android:id="@+id/textViewPrecioAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"/>
    <TextView
        android:id="@+id/textViewDetalleAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle"/>
    <ImageView
        android:id="@+id/imageViewPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetalleAP"
        app:srcCompat="@drawable/ic_launcher_background"/>

</LinearLayout>